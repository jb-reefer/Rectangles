<Window x:Class="Rectangles.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <ToolBarTray HorizontalAlignment="Stretch" DockPanel.Dock="Top">
            <ToolBar>
                <Button Name="DrawRectange" ToolTip="Draw a rectangle" Height="32" Width="32"
                        Click="DrawRectange_Click">
                    <Image Source="Images/Rectangle.jpg" Stretch="Fill" />
                </Button>
            </ToolBar>

        </ToolBarTray>
        <InkCanvas DockPanel.Dock="Bottom" />
    </DockPanel>
</Window>
